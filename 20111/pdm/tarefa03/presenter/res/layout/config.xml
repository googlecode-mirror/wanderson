<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/label_server" android:text="@string/label_server"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/serverAddress" android:text="@string/empty"></EditText>
    <TextView android:layout_height="wrap_content" android:text="@string/label_port" android:layout_width="wrap_content" android:id="@+id/label_port"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/port" android:text="@string/empty"></EditText>
    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/save" android:text="@string/save"></Button>
</LinearLayout>
